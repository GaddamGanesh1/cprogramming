#include <stdio.h>
int main() {
    int n, even_count  = 0, odd_count = 0;
    printf("enter number of elements: ");
    scanf("%d", &n);
    int arr[n];
    printf("enter %d elements: ,", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        
    }
for (int i = 0; i < n; i++){
    if (arr[i] % 2 == 0)
    even_count++;
    else
    odd_count++;
}
printf("number of even elements: %d\n", even_count);
printf("number of odd elements: %d\n", odd_count);
return 0;
